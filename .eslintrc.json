{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": [
      "warn",
      { "allow": ["clear", "info", "error", "dir", "trace"] }
    ],
    "no-unused-vars": "warn",
    "no-trailing-spaces": "warn"
  }
}
